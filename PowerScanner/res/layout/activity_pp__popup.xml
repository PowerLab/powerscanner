<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PP_pop_LinearLayout"
    android:layout_width="300dip"
    android:layout_height="400dip"
    android:layout_gravity="center"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".PP_PopupActivity" >

    <ListView
        android:id="@+id/PP_pop_fileList"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="8" >
    </ListView>

    <LinearLayout
        android:id="@+id/PP_pop_LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/PP_pop_btn_select"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/pp_text_select" >
        </Button>

        <Button
            android:id="@+id/PP_pop_btn_cancel"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/pp_text_cancel" >
        </Button>
    </LinearLayout>

</LinearLayout>